{
  "name": "poc-server-node-typescript",
  "version": "1.0.0",
  "description": "PoC for Web Server with NodeJS written with Typescript",
  "private": true,
  "main": "dist/index.js",
  "scripts": {
    "build": "run-s build:clean build:code",
    "build:clean": "rimraf dist",
    "build:code": "tsc",
    "dev": "nodemon src/entry.ts",
    "dev:debug": "nodemon --inspect src/entry.ts",
    "fmt": "prettier --write '**/*.{js,ts}'",
    "fmt:p": "prettier-package-json --write",
    "prod": "run-s build && node dist/entry.js",
    "test": "jest"
  },
  "author": "Kabany <developers@kabany.io>",
  "devDependencies": {
    "@babel/core": "^7.26.0",
    "@babel/preset-env": "^7.26.0",
    "@babel/preset-typescript": "^7.26.0",
    "@types/dotenv": "^8.2.3",
    "@types/express": "^5.0.0",
    "@types/jest": "^29.5.14",
    "@types/jsonwebtoken": "9.0.8",
    "@types/sha.js": "^2.4.4",
    "babel-jest": "^29.7.0",
    "jest": "^29.7.0",
    "jest-editor-support": "^31.1.2",
    "nodemon": "^3.1.9",
    "npm-run-all": "4.1.5",
    "prettier": "3.4.2",
    "rimraf": "6.0.1",
    "supertest": "7.0.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.7.2"
  },
  "dependencies": {
    "dotenv": "^16.4.7",
    "express": "^4.21.2",
    "http-status-codes": "^2.3.0",
    "jsonwebtoken": "9.0.2",
    "sha.js": "^2.4.11",
    "tydet-core": "^1.0.4",
    "tydet-core-express": "^1.0.1",
    "tydet-core-logger": "^1.0.3",
    "tydet-core-mysql": "^1.0.2",
    "tydet-core-redis": "^1.0.4",
    "tydet-utils": "^1.3.1"
  }
}
